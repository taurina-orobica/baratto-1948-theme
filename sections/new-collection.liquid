<section
  class='h-[520px] flex justify-center'
>
  <div class='mb-12 mt-auto flex flex-col items-center text-white'>
    <img
      src='{{ section.settings.image | image_url: width: 1000 }}'
      alt='{{ section.settings.image.alt | escape }}'
      width='100%'
      height='{{ 70 | divided_by: section.settings.image.aspect_ratio | ceil }}'
      loading='lazy'
    >
    <div>
      <h3>Nuova collezione Baratto</h3>
      <button class='-mt--space-s font-serif' variant='light'>
        <a href='#'>dddd</a>
      </button>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "New collection",
  "tag": "section",
  "class": "new-collection",
  "limit": 1,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ]
}
{% endschema %}
